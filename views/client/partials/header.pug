include ../mixins/sub-menu.pug
header.header

    //- div #{settingGeneral}
    .container
        .row.align-item-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src=settingGeneral.logo, alt=settingGeneral.wesiteName)
                        //- img(src="/image/logo.svg", alt="Logo")
            .col-5
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa...."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
            .col-9 
                .inner-menu 
                    ul 
                        div(class="head-menu")
                            ul 
                                li 
                                    a(href="/") Trang chủ
                                
                                li(class="sub-menu")
                                    -const pathProduct = "/products";
                                    a(href=pathProduct) Sản phẩm
                                        +sub-menu(layoutProductCategory,pathProduct)
                                
                                li 
                                    a(href="/cart") Giỏ hàng(#{miniCart?miniCart.totalQuantity:0})
                                
                                li 
                                    a(href="/admin/dashboard") Admin
                                
                            ul
                                if(user)
                                    li
                                        a(
                                            href="/users/not-friend"
                                        ) Bạn bè
                                    li 
                                        a(href="rooms-chat") Phòng chát
                                    li 
                                        a(href="/chat") Chat 
                                    li
                                        a(class="lohout-user" href="/user/info")
                                            p Tài khoản: #{user.fullName}
                                    li 
                                        a(href="/user/logout") Đăng Xuất
                                else
                                    li 
                                        a(href="/user/login") Đăng Nhập

                                    li 
                                        a(href="/user/register") Đăng ký 
                        
                        
