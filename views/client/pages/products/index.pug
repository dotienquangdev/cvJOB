extends ../../layouts/default.pug
//- extends là kế thừa
include ../../mixins/box-head.pug
//- include là nhúng vào 

block main
    .row 
        .col-12 
            +box-head("Danh sách sản phẩm")
    .conteiner.my-3 
        

        .row.products 
            each item in products
                .col-4.mb-3.products-item 
                    .product-item 
                        .inner-image 
                            img(
                                class="inner-image-img"
                                src=item.thumbnail 
                                alt=item.title
                            )
                        .inner-content 
                            h3.inner-title 
                                a(href=`/products/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%
            

